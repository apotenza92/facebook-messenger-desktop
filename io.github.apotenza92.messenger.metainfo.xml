<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.apotenza92.messenger</id>
  <name>Messenger</name>
  <summary>Unofficial desktop client for Facebook Messenger</summary>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>
  <developer id="io.github.apotenza92">
    <name>Alex Potenza</name>
  </developer>
  <description>
    <p>This is a community package and is not officially supported by Meta Platforms, Inc.</p>
    <p>
      A native desktop application that wraps messenger.com, providing OS integrations
      for a seamless messaging experience.
    </p>
    <p>Features include:</p>
    <ul>
      <li>Native desktop notifications with duplicate filtering</li>
      <li>Unread message badge on dock/taskbar</li>
      <li>System tray with background operation</li>
      <li>Keyboard shortcuts</li>
      <li>Auto-launch on startup</li>
      <li>Screen sharing support (including Wayland)</li>
    </ul>
  </description>
  <launchable type="desktop-id">io.github.apotenza92.messenger.desktop</launchable>
  <url type="homepage">https://github.com/apotenza92/facebook-messenger-desktop</url>
  <url type="bugtracker">https://github.com/apotenza92/facebook-messenger-desktop/issues</url>
  <screenshots>
