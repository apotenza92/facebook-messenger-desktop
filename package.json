{
  "name": "facebook-messenger-desktop",
  "version": "0.8.7",
  "description": "A self-contained desktop app for Facebook Messenger",
  "main": "dist/main/main.js",
  "scripts": {
    "clean": "node scripts/clean.js",
    "build": "npm run clean && tsc && tsc -p src/preload/tsconfig.json",
    "start": "npm run build && node scripts/dev.js",
    "generate-icons": "node scripts/generate-icons.js",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:mac": "npm run build && electron-builder --mac --arm64 --x64 --publish=never",
    "dist:mac:arm": "npm run build && electron-builder --mac --arm64 --publish=never",
    "dist:mac:x64": "npm run build && electron-builder --mac --x64 --publish=never",
    "dist:win": "npm run build && electron-builder --win --arm64 --x64 --publish=never",
    "dist:win:arm": "npm run build && electron-builder --win --arm64 --publish=never",
    "dist:win:x64": "npm run build && electron-builder --win --x64 --publish=never",
    "dist:linux": "npm run build && electron-builder --linux --publish=never",
    "dist:linux:arm": "npm run build && electron-builder --linux --arm64 --publish=never",
    "dist:linux:x64": "npm run build && electron-builder --linux --x64 --publish=never",
    "dist:all": "npm run build && electron-builder --mac --win --linux --publish=never"
  },
  "keywords": [
    "messenger",
    "facebook",
    "desktop",
    "electron"
  ],
  "author": {
    "name": "Alex Potenza",
    "email": "apotenza92@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "electron-updater": "^6.1.8"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "png-to-ico": "^2.1.8",
    "sharp": "0.33.5",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.facebook.messenger.desktop",
    "productName": "Messenger",
    "afterPack": "./scripts/after-pack.js",
    "publish": [
      {
        "provider": "github",
        "owner": "apotenza92",
        "repo": "FacebookMessengerDesktop"
      }
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.social-networking",
      "target": "zip",
      "icon": "assets/icons/icon.icns",
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "notarize": {
        "teamId": "27JL2VERNC"
      },
      "artifactName": "Messenger-macos-${arch}.${ext}"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icons/icon.ico",
      "artifactName": "Messenger-windows-${arch}-setup.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "differentialPackage": false,
      "shortcutName": "Messenger",
      "deleteAppDataOnUninstall": true,
      "include": "scripts/uninstaller.nsh"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "snap",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "flatpak",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Network",
      "icon": "assets/icons/linux",
      "executableName": "facebook-messenger-desktop",
      "desktop": {
        "Name": "Messenger",
        "Comment": "Desktop client for Facebook Messenger",
        "Categories": "Network;InstantMessaging;Chat;",
        "StartupWMClass": "Messenger",
        "Icon": "facebook-messenger-desktop"
      }
    },
    "appImage": {
      "artifactName": "facebook-messenger-desktop-${arch}.${ext}"
    },
    "deb": {
      "packageName": "facebook-messenger-desktop",
      "artifactName": "facebook-messenger-desktop-${arch}.${ext}",
      "afterInstall": "scripts/linux-after-install.sh"
    },
    "rpm": {
      "packageName": "facebook-messenger-desktop",
      "artifactName": "facebook-messenger-desktop-${arch}.${ext}",
      "afterInstall": "scripts/linux-after-install.sh"
    },
    "snap": {
      "confinement": "strict",
      "grade": "stable",
      "base": "core22",
      "artifactName": "facebook-messenger-desktop-${arch}.${ext}",
      "plugs": [
        "default",
        "camera",
        "audio-record",
        "removable-media"
      ]
    },
    "flatpak": {
      "runtime": "org.freedesktop.Platform",
      "runtimeVersion": "23.08",
      "sdk": "org.freedesktop.Sdk",
      "artifactName": "facebook-messenger-desktop-${arch}.${ext}"
    }
  }
}
