{
  "name": "facebook-messenger-desktop",
  "version": "0.1.6",
  "description": "A self-contained desktop app for Facebook Messenger",
  "main": "dist/main/main.js",
  "scripts": {
    "clean": "rm -rf dist release",
    "build": "npm run clean && tsc && tsc -p src/preload/tsconfig.json",
    "start": "npm run build && npm run start:dev --",
    "start:dev": "node scripts/start-dev.js",
    "generate-icons": "node scripts/generate-icons.js",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:mac": "npm run build && electron-builder --mac --arm64 --x64 --publish=never",
    "dist:win": "npm run build && electron-builder --win --publish=never",
    "dist:linux": "npm run build && electron-builder --linux --publish=never",
    "dist:all": "npm run build && electron-builder --mac --win --linux --publish=never"
  },
  "keywords": [
    "messenger",
    "facebook",
    "desktop",
    "electron"
  ],
  "author": {
    "name": "Alex Potenza",
    "email": "apotenza92@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-updater": "^6.1.8",
    "png-to-ico": "^2.1.8",
    "sharp": "0.33.5",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.facebook.messenger.desktop",
    "productName": "Messenger",
    "publish": [
      {
        "provider": "github",
        "owner": "apotenza92",
        "repo": "FacebookMessengerDesktop"
      }
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.social-networking",
      "target": [
        { "target": "dmg", "arch": ["arm64"] },
        { "target": "dmg", "arch": ["x64"] }
      ],
      "icon": "assets/icons/icon.icns",
      "notarize": {
        "teamId": "27JL2VERNC"
      },
      "artifactName": "Messenger-${version}-macos-${arch}.${ext}"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icons/icon.ico",
      "artifactName": "Messenger-${version}-windows-setup.${ext}"
    },
    "nsis": {
      "differentialPackage": false
    },
    "dmg": {
    "icon": "assets/icons/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Network",
      "icon": "assets/icons/icon.png",
      "artifactName": "Messenger-${version}-linux.${ext}"
    }
  }
}
